<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        @eval outputBackgroundColor org.eclipse.che.ide.api.theme.Style.theme.outputBackgroundColor();

        .helloWorldPanel {
            width: 100%;
            height: 100%;
            overflow: hidden;
            background-color: outputBackgroundColor;
        }

    </ui:style>

    <g:FlowPanel width="100%" height="100%">
        <g:FlowPanel ui:field="helloWorldPanel" styleName="{style.helloWorldPanel}" />
    </g:FlowPanel>
</ui:UiBinder>
